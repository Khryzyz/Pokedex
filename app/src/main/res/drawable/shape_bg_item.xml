<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="-120dp"
        android:top="-120dp"
        android:left="-120dp"
        android:right="-120dp">
        <rotate android:fromDegrees="315">
            <shape android:shape="rectangle">
                <size
                    android:width="500dp"
                    android:height="80dp"/>
                <solid android:color="@color/primary_dark"/>
            </shape>
        </rotate>
    </item>
    <item
        android:bottom="-80dp"
        android:top="-80dp"
        android:left="-80dp"
        android:right="-50dp">
        <rotate android:fromDegrees="315">
            <shape android:shape="rectangle">
                <size
                    android:width="500dp"
                    android:height="80dp"/>
                <solid android:color="@color/primary"/>
            </shape>
        </rotate>
    </item>
</layer-list>