<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pokedex" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_light</item>
        <item name="colorOnPrimary">@color/primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent_dark</item>
        <item name="colorOnSecondary">@color/accent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="appBar" parent="Theme.Pokedex">
        <item name="android:background">@color/primary</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="bottomNavigation" parent="Theme.Pokedex">
        <item name="android:background">@color/white</item>
        <item name="itemTextColor">@color/primary</item>
        <item name="itemRippleColor">@color/primary_light</item>
        <item name="itemIconTint">@color/primary</item>
    </style>

    <style name="linearProgressIndicator" parent="Theme.Pokedex">
        <item name="android:layout_marginStart">@dimen/margin_large</item>
        <item name="android:layout_marginEnd">@dimen/margin_large</item>
        <item name="android:layout_marginTop">@dimen/margin_large</item>
        <item name="indicatorColor">@color/primary_light</item>
        <item name="trackColor">@color/primary</item>
    </style>

    <style name="itemListPokemon" parent="Theme.Pokedex">
        <item name="android:background">@drawable/shape_bg_item_pokemon_light</item>
    </style>

    <style name="itemListMove" parent="Theme.Pokedex">
        <item name="android:background">@drawable/shape_bg_item_movement_light</item>
        <item name="elevation">4dp</item>
    </style>

    <style name="tabLayout" parent="Theme.Pokedex">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@color/design_default_color_background</item>
        <item name="tabIndicatorColor">@color/primary</item>
        <item name="tabRippleColor">@color/primary_light</item>
        <item name="tabSelectedTextColor">@color/primary</item>
    </style>

    <style name="textViewTitle" parent="textViewTitleGeneral">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textViewTitle.Error" parent="textViewTitleGeneral">
        <item name="android:layout_gravity">center_horizontal|center_vertical</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textViewBody" parent="textViewBodyGeneral">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textViewBody.Error" parent="textViewBodyGeneral">
        <item name="android:layout_gravity">center_horizontal|center_vertical</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textViewBody.ItemPokemon" parent="textViewBodyGeneral">
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_item_pokemon_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="textViewBody.ItemMove" parent="textViewBodyGeneral">
        <item name="textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_item_move_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textViewBody.DetailNumber" parent="textViewBodyGeneral">
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_detail_number_size</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="textViewBody.DetailName" parent="textViewBodyGeneral">
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_detail_name_size</item>
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="textViewBody.DetailInfo" parent="textViewBodyGeneral">
        <item name="android:shadowColor">@color/accent_dark</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>