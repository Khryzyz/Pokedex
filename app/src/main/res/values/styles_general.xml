<resources>

    <style name="textViewTitleGeneral">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="textViewBodyGeneral">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <!--Animation-->
    <style name="animation">
        <item name="android:layout_width">@dimen/size_animation</item>
        <item name="android:layout_height">@dimen/size_animation</item>
        <item name="android:layout_gravity">bottom|center</item>
        <item name="lottie_autoPlay">true</item>
        <item name="lottie_loop">true</item>
    </style>

    <!--Guidelines-->

    <style name="guideLineHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!--ImageViews-->
    <style name="imvPokeballBack">
        <item name="android:layout_width">@dimen/size_pokeball_back</item>
        <item name="android:layout_height">@dimen/size_pokeball_back</item>
        <item name="android:layout_marginStart">@dimen/margin_xxxlarge</item>
        <item name="android:layout_marginTop">@dimen/margin_large</item>
        <item name="android:layout_marginBottom">@dimen/margin_large</item>
        <item name="android:src">@mipmap/bg_pokeball</item>
    </style>

    <style name="imvSpriteInfoPokemon">
        <item name="android:layout_width">@dimen/size_pokemon_sprite_info</item>
        <item name="android:layout_height">@dimen/size_pokemon_sprite_info</item>
    </style>

    <!--Cards-->
    <style name="card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
    </style>

    <style name="TravelOption">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@drawable/shape_bg_option</item>
    </style>

</resources>
