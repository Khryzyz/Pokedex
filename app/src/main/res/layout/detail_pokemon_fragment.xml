<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".layer.ui.fragment.detail.DetailPokemonFragment">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/margin_large"
        android:background="@drawable/shape_gradient"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/textViewDetailPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        android:text="999"
        app:layout_constraintStart_toStartOf="@id/frameLayout"
        app:layout_constraintTop_toTopOf="@+id/frameLayout"
        tools:text="999" />

    <TextView
        style="@style/textViewDetailAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        android:text="Charizard"
        app:layout_constraintStart_toStartOf="@id/frameLayout"
        app:layout_constraintBottom_toBottomOf="@+id/frameLayout"
        tools:text="Charizard" />

    <ImageView
        android:id="@+id/imvTypeFirst"
        android:layout_width="100dp"
        android:layout_height="22dp"
        android:src="@mipmap/type_fire_name"
        app:layout_constraintEnd_toEndOf="@+id/frameLayout"
        app:layout_constraintTop_toTopOf="@id/frameLayout"
        tools:src="@mipmap/type_fire_name" />

    <ImageView
        android:id="@+id/imvTypeSecond"
        android:layout_width="100dp"
        android:layout_height="22dp"
        android:src="@mipmap/type_flying_name"
        app:layout_constraintEnd_toEndOf="@+id/frameLayout"
        app:layout_constraintTop_toBottomOf="@id/imvTypeFirst"
        tools:src="@mipmap/type_flying_name" />

    <ImageView
        android:id="@+id/imvArtwork"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@mipmap/sample_artwork"
        app:layout_constraintEnd_toEndOf="@+id/frameLayout"
        app:layout_constraintStart_toStartOf="@id/frameLayout"
        app:layout_constraintBottom_toBottomOf="@id/frameLayout"
        app:layout_constraintTop_toTopOf="@id/frameLayout"
        tools:src="@mipmap/sample_artwork" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />


</androidx.constraintlayout.widget.ConstraintLayout>