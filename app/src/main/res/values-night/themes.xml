<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pokedex" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_light</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="appBar" parent="Theme.Pokedex">
        <item name="android:background">@color/black</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="bottomNavigation" parent="Theme.Pokedex">
        <item name="android:background">@color/black</item>
        <item name="itemTextColor">@color/white</item>
        <item name="itemRippleColor">@color/accent_dark</item>
        <item name="itemIconTint">@color/white</item>
    </style>

    <style name="linearProgressIndicator" parent="Theme.Pokedex">
        <item name="android:layout_marginStart">@dimen/margin_large</item>
        <item name="android:layout_marginEnd">@dimen/margin_large</item>
        <item name="android:layout_marginTop">@dimen/margin_large</item>
        <item name="indicatorColor">@color/white</item>
        <item name="tabRippleColor">@color/accent_dark</item>
        <item name="trackColor">@color/accent</item>
    </style>

    <style name="separator" parent="Theme.Pokedex">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1sp</item>
        <item name="android:background">@color/accent_dark</item>
    </style>

    <style name="itemListPokemon" parent="Theme.Pokedex">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_item_pokemon</item>
        <item name="android:background">@drawable/shape_bg_item_pokemon_dark</item>
        <item name="elevation">4dp</item>
    </style>

    <style name="itemListMove" parent="Theme.Pokedex">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_item_move</item>
        <item name="android:background">@drawable/shape_bg_item_movement_dark</item>
        <item name="elevation">4dp</item>
    </style>

    <style name="tabLayout" parent="Theme.Pokedex">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@color/black</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="buttonDialog" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="backgroundTint">@color/accent</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TinderCard">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="textViewTitle" parent="textViewTitleGeneral">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="textViewTitle.Message" parent="textViewTitleGeneral">
        <item name="android:layout_gravity">center_horizontal|center_vertical</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="textViewBody" parent="textViewBodyGeneral">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="textViewBody.Message" parent="textViewBodyGeneral">
        <item name="android:layout_gravity">center_horizontal|center_vertical</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="textViewBody.ItemPokemon" parent="textViewBodyGeneral">
        <item name="android:shadowColor">@color/accent_dark</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_item_pokemon_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="textViewBody.ItemMove.Title" parent="textViewBodyGeneral">
        <item name="textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_item_move_title_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="textViewBody.ItemMove.Body" parent="textViewBodyGeneral">
        <item name="android:textSize">@dimen/text_item_move_body_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">@dimen/margin_default</item>
        <item name="android:layout_marginBottom">@dimen/margin_large</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="textViewBody.DetailNumber" parent="textViewBodyGeneral">
        <item name="android:shadowColor">@color/accent_dark</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_detail_number_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="textViewBody.DetailName" parent="textViewBodyGeneral">
        <item name="android:shadowColor">@color/white</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_detail_name_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textViewBody.DetailInfo" parent="textViewBodyGeneral">
        <item name="android:shadowColor">@color/accent_dark</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>